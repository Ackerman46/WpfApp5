      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Interface.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300" Title="Удаление по фамилии">

    <Grid Background="{DynamicResource GradBrush}">
        <TextBox HorizontalAlignment="Left" Margin="60,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" x:Name="tbDelName"/>
        <Label Content="Введите фамилию для удаления" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top"/>
        <Button Content="Применить" HorizontalAlignment="Left" Margin="59,119,0,0" VerticalAlignment="Top" Width="185" x:Name="btApply" Click="btApply_Click"/>

    </Grid>
</Page>
